# Environment Variables Template
# Copy this file to .env and fill in your values

# NextAuth.js Configuration
NEXTAUTH_SECRET=your-secret-here
NEXTAUTH_URL=http://localhost:3000

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM="Flight-Bot" <your-email@gmail.com>

# Telegram Bot Configuration
TELEGRAM_BOT_USERNAME=ticketscannerbot_bot
TELEGRAM_BOT_TOKEN=your-bot-token-here

# Webapp URL for redirect links
NEXT_PUBLIC_WEBAPP_URL=http://localhost:3000

# Database URL (SQLite for development)
DATABASE_URL="file:./dev.db"

# Bot Database Integration (paths to your existing bot databases)
BOT_DATABASE_PATH=../data/flights.db
BOT_ALERTS_DATABASE_PATH=../data/alerts.db

# Twilio Configuration for WhatsApp
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# Flight API Configuration (from your existing bot)
ARAJET_API_URL=https://arajet-api.ezycommerce.sabre.com
ARAJET_API_KEY=your-arajet-key

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_BOT_USERNAME=your_flight_bot

# JWT Secret
JWT_SECRET=your-jwt-secret

# Admin Configuration
ADMIN_EMAIL=admin@example.com
