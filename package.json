{
  "name": "flight-deals-bot",
  "version": "1.0.0",
  "description": "Bot de Telegram para monitoreo de precios de vuelos con sistema de alertas",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "db:init": "ts-node -r tsconfig-paths/register src/scripts/initDb.ts",
    "db:migrate": "ts-node -r tsconfig-paths/register src/scripts/migrate.ts",
    "typecheck": "tsc --noEmit",
    "configure-arajet": "ts-node -r tsconfig-paths/register scripts/configure-arajet.ts",
    "test-arajet": "ts-node -r tsconfig-paths/register scripts/test-arajet-api.ts",
    "test-advanced": "ts-node -r tsconfig-paths/register scripts/test-advanced-endpoints.ts",
    "analyze-response": "ts-node -r tsconfig-paths/register scripts/analyze-response.ts",
    "compare-responses": "ts-node -r tsconfig-paths/register scripts/compare-responses.ts",
    "test-multiple-passengers": "npx tsx scripts/test-multiple-passengers.ts",
    "test-alert-creation": "npx tsx scripts/test-alert-creation.ts",
    "demo-complete": "npx tsx scripts/demo-complete-system.ts",
    "start-bot": "npx tsx scripts/start-bot.ts",
    "pm2:start": "pm2 start ecosystem.config.json",
    "pm2:stop": "pm2 stop flight-bot",
    "pm2:restart": "pm2 restart flight-bot",
    "pm2:status": "pm2 status",
    "pm2:logs": "pm2 logs flight-bot",
    "pm2:delete": "pm2 delete flight-bot",
    "show-airports": "npx tsx scripts/show-airports.ts"
  },
  "keywords": [
    "telegram",
    "bot",
    "flights",
    "price-monitoring",
    "alerts",
    "typescript"
  ],
  "author": "Martin Navarro",
  "license": "MIT",
  "dependencies": {
    "@types/uuid": "^10.0.0",
    "axios": "^1.6.2",
    "better-sqlite3": "^9.2.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "moment": "^2.29.4",
    "node-cron": "^3.0.3",
    "node-telegram-bot-api": "^0.64.0",
    "rate-limiter-flexible": "^4.0.1",
    "uuid": "^11.1.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.5",
    "@types/node-cron": "^3.0.11",
    "@types/node-telegram-bot-api": "^0.64.7",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
